<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Becas_uni_detalle">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/tituloUni_beca"
                android:layout_width="match_parent"
                android:layout_height="72dp"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="24sp" />

            <ImageView
                android:id="@+id/imagenUni_beca"
                android:layout_width="match_parent"
                android:layout_height="174dp"
                tools:srcCompat="@tools:sample/avatars" />

            <TextView
                android:id="@+id/subtituloUni_beca"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/esp_blanco31"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:textSize="24sp" />

            <WebView
                android:id="@+id/web_beca"
                android:layout_width="366dp"
                android:layout_height="356dp"
                android:layout_gravity="center" />

            <TextView
                android:id="@+id/esp_blanco33"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="24sp" />

            <WebView
                android:id="@+id/web_beca2"
                android:layout_width="366dp"
                android:layout_height="356dp"
                android:layout_gravity="center" />

            <TextView
                android:id="@+id/esp_blanco34"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="24sp" />

            <ImageView
                android:id="@+id/image_becas"
                android:layout_width="match_parent"
                android:layout_height="236dp"
                tools:srcCompat="@tools:sample/avatars" />

            <TextView
                android:id="@+id/esp_blanco35"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="24sp" />

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>