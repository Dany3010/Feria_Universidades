<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo2"
    tools:context=".contactos_uni_detalle">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="0dp"
                app:cardCornerRadius="10dp"
                app:cardElevation="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="0dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tituloUni_contactos"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:layout_marginTop="10dp"
                        android:textAlignment="center"
                        android:textColor="#000000"
                        android:textSize="19sp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/espacio_blanco"
                android:layout_width="match_parent"
                android:layout_height="22dp"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="24sp" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:layout_margin="20dp"
                app:cardCornerRadius="15dp"
                app:cardElevation="40dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/imagenUni_contacto"
                        android:layout_width="match_parent"
                        android:layout_height="174dp"
                        tools:srcCompat="@tools:sample/avatars" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/espacio_blanco11"
                android:layout_width="match_parent"
                android:layout_height="22dp"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="24sp" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="0dp"
                app:cardCornerRadius="10dp"
                app:cardElevation="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="0dp"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/subtituloUni_contacto"
                        android:layout_width="match_parent"
                        android:layout_height="44dp"
                        android:text="Contactos"
                        android:textAlignment="center"
                        android:textColor="#000000"
                        android:textSize="24sp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/espacio_blanco2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="24sp" />

            <LinearLayout
                android:layout_width="287dp"
                android:layout_height="79dp"
                android:layout_gravity="center_horizontal"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/facebook"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:background="@drawable/facebook" />

                <TextView
                    android:id="@+id/espacio_blanco3"
                    android:layout_width="25dp"
                    android:layout_height="wrap_content" />

                <Button
                    android:id="@+id/twitter"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:background="@drawable/twitter" />

                <TextView
                    android:id="@+id/espacio_blanco4"
                    android:layout_width="25dp"
                    android:layout_height="wrap_content" />

                <Button
                    android:id="@+id/buscador_web"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:background="@drawable/buscador_web" />
            </LinearLayout>

            <TextView
                android:id="@+id/espacio_blanco5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="24sp" />

            <LinearLayout
                android:layout_width="290dp"
                android:layout_height="82dp"
                android:layout_gravity="center_horizontal"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/instagram"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:background="@drawable/instagram" />

                <TextView
                    android:id="@+id/espacio_blanco9"
                    android:layout_width="25dp"
                    android:layout_height="wrap_content" />

                <Button
                    android:id="@+id/correo"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:background="@drawable/correo" />

                <TextView
                    android:id="@+id/espacio_blanco10"
                    android:layout_width="25dp"
                    android:layout_height="wrap_content" />

                <Button
                    android:id="@+id/Whatsapp"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:background="@drawable/whatsapp" />
            </LinearLayout>

            <TextView
                android:id="@+id/espacio_blanco6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="24sp" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="0dp"
                app:cardCornerRadius="10dp"
                app:cardElevation="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="0dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/subtituloUni_contact_map"
                        android:layout_width="match_parent"
                        android:layout_height="98dp"
                        android:layout_marginTop="10dp"
                        android:textAlignment="center"
                        android:textColor="#000000"
                        android:textSize="18sp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/espacio_blanco8"
                android:layout_width="match_parent"
                android:layout_height="31dp"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="24sp" />

            <WebView
                android:id="@+id/mapas_unis"
                android:layout_width="match_parent"
                android:layout_height="507dp" />

            <TextView
                android:id="@+id/espacio_blanco7"
                android:layout_width="match_parent"
                android:layout_height="66dp"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="24sp" />

        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>